{
  "version": 2,
  "name": "clob-trading-platform",
  "framework": "create-react-app",
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "installCommand": "npm ci",
  "devCommand": "npm start",
  "public": true,
  "regions": ["iad1", "sfo1"],
  "env": {
    "REACT_APP_API_URL": "@clob_api_url",
    "REACT_APP_WS_URL": "@clob_ws_url",
    "REACT_APP_APTOS_NETWORK": "@aptos_network",
    "REACT_APP_APTOS_NODE_URL": "@aptos_node_url",
    "REACT_APP_APTOS_FAUCET_URL": "@aptos_faucet_url",
    "REACT_APP_CONTRACT_ADDRESS": "@contract_address",
    "REACT_APP_ENVIRONMENT": "@environment"
  },
  "build": {
    "env": {
      "REACT_APP_API_URL": "https://api-clob-trading.vercel.app",
      "REACT_APP_WS_URL": "wss://api-clob-trading.vercel.app",
      "REACT_APP_APTOS_NETWORK": "testnet",
      "REACT_APP_APTOS_NODE_URL": "https://fullnode.testnet.aptoslabs.com/v1",
      "REACT_APP_APTOS_FAUCET_URL": "https://faucet.testnet.aptoslabs.com",
      "REACT_APP_CONTRACT_ADDRESS": "0d5c0d1dc99dd0f4d7ec1dcd074532df8f53dc13c48ac28cdb7c4e3205612944",
      "REACT_APP_ENVIRONMENT": "production",
      "GENERATE_SOURCEMAP": "false",
      "CI": "false"
    }
  },
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/trade",
      "destination": "/",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api-clob-trading.vercel.app/api/:path*"
    }
  ],
  "functions": {
    "app/api/**/*.js": {
      "runtime": "nodejs18.x",
      "regions": ["iad1", "sfo1"]
    }
  },
  "crons": [
    {
      "path": "/api/cron/cleanup",
      "schedule": "0 2 * * *"
    }
  ]
}